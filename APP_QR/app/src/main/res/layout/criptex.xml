<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#203040"
    tools:context=".StartVideo">

    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cronometro"
            android:textColor="#fff"
            android:textSize="50dp"
            android:textAlignment="textEnd"
            android:text="20:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/questionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="CODIGO FINAL">

        </TextView>

        <TextView
            android:textColor="@color/white"
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Introduce el cÃ³digo final">

        </TextView>

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#000000">

            <NumberPicker
                android:id="@+id/numberPicker1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:descendantFocusability="blocksDescendants"
                android:showDividers="none"
                android:solidColor="#575757"
                android:theme="@style/NumberPickerTheme"></NumberPicker>

            <NumberPicker
                android:theme="@style/NumberPickerTheme"
                android:id="@+id/numberPicker2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:descendantFocusability="blocksDescendants"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:solidColor="#575757"></NumberPicker>

            <NumberPicker
                android:theme="@style/NumberPickerTheme"
                android:id="@+id/numberPicker3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:descendantFocusability="blocksDescendants"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:solidColor="#575757"></NumberPicker>

            <NumberPicker
                android:theme="@style/NumberPickerTheme"
                android:id="@+id/numberPicker4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:descendantFocusability="blocksDescendants"
                android:background="#FFFFFF"
                android:solidColor="#575757"></NumberPicker>

            <NumberPicker
                android:theme="@style/NumberPickerTheme"
                android:id="@+id/numberPicker5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:descendantFocusability="blocksDescendants"
                android:background="#FFFFFF"
                android:solidColor="#575757"></NumberPicker>

            <NumberPicker
                android:theme="@style/NumberPickerTheme"
                android:id="@+id/numberPicker6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:descendantFocusability="blocksDescendants"
                android:background="#FFFFFF"
                android:solidColor="#575757"></NumberPicker>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">


        <SurfaceView
            android:layout_margin="10dp"
            android:id="@+id/visor"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ListView
            android:layout_margin="10dp"
            android:theme="@style/ColorListView"
            android:background="#B3B3B3"
            android:id="@+id/lista"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"></ListView>
    </LinearLayout>




</LinearLayout>
